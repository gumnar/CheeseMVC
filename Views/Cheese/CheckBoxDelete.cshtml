@model  CheeseMVC.ViewModels.DeleteCheesesViewModel

@{
    ViewData["Title"] = "CheckBoxDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckBoxDelete</h2>
<form asp-action="CheckBoxDelete">
    @foreach(var item in Model.Cheeses)
    {
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
    }
    <button type="submit">Delete Cheese(s)</button>
</form>
